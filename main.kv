            padding: 10,10,10,10
            spacing: 5
            size_hint_y: None 
            cols:1 
            row_default_height: root.height*0.15
            height: self.minimum_height
<leftLabel@Label>:
    size_hint_y: 0.5
    text_size: self.size
    halign: "left"
<mensajes>:
    BoxLayout:
        orientation: "vertical"
        Label:
            id: message
            size_hint: 1, 0.8
            text: ""
        Button:
            background_normal: ""
            background_color: 0,0,1,0.85
            size_hint: 1, 0.2
            text: "Aceptar"
            on_release: root.dismiss()
<insertar>:
    orientation: "vertical"
    canvas:
        Color:
            rgb: 191.0/255.0,243.0/255.0,129.0/255.0
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        size_hint_y: 1.2
        orientation: "horizontal"
        Image:
            source: "imagenes/balon.png"
            size_hint_x: 0.3
        Image:
            source: "imagenes/cintillo.png"
            size_hint_: 0.7
    Label:
        text_size: self.size
        halign: "left"
        size_hint_y: 0.5
        text: "Nombre del Torneo: "
    TextInput:
        padding:5,5,5,5
        id: ti_nde
        size_hint_y: 0.5
        multiline: False      
        hint_text: "Ingrese un nombre para el torneo"  
    leftLabel:
        text: "Organizador: "
    TextInput:
        id: ti_capi
        size_hint_y: 0.5
        multiline: False      
        hint_text: "Ingrese el nombre que sera difundido"  
    leftLabel:
        text: u"Informacion de Contacto: "
    TextInput:
        id: ti_conta
        size_hint_y: 0.5
        multiline: False      
        hint_text: "Ingrese dato de contacto (whatsapp/telegram)"
    leftLabel:
        text: "Ubicacion del torneo"
    TextInput:
        id: ti_hora
        size_hint_y: 0.5
        multiline: True      
        hint_text: "Indique el lugar, puede ser link google maps"
    leftLabel:
        text: "Reglas del torneo"
    TextInput:
        id: ti_reglas
        size_hint_y: 0.5
        multiline: True      
        hint_text: "Copiar y pegar texto con las normas"
    Label:
        size_hint_y: 0.5
        text: "SELECCIONE LA MODALIDAD DEL TORNEO"
    BoxLayout:
        ToggleButton:
            id: tb_relampago
            background_color: 0, 0, 1, 0.5
            text: "Torneo\n Relampago"
            group: "torneo"
            halign: "center"
            on_press: 
        ToggleButton:
            id: tb_elidire
            background_color: 0, 0, 1, 0.5
            text: "Eliminacion\n Directa"
            group: "torneo"
            halign: "center"
        ToggleButton:
            id: tb_elidob
            background_color: 0, 0, 1, 0.5
            text: "Doble\n Eliminacion"
            group: "torneo"
            halign: "center"
            #state: "down"
        ToggleButton:
            id: tb_piram
            background_color: 0, 0, 1, 0.5
            text: "Piramide"
            group: "torneo"
            halign: "center"
    Label:
        text: ""
        size_hint_y: 4
    BoxLayout:
        Button:
            background_normal: ""
            background_color: 1,0,0,0.85
            text: "Volver"  
            on_press: root.back_to_torneo()
        Button:
            background_color: 0, 1, .2, 5
            text: "Continuar"
            on_press: root.inserta_dato2()
            #on_press: root.inserta_dato()
