#:kivy 1.1.0
<MainWid>:
    canvas:
        Color:
            rgb: 191.0/255.0,243.0/255.0,129.0/255.0
        Rectangle:
            pos: self.pos
            size: self.size
<StartWid>:
    orientation: "vertical"
    canvas:
        Color:
            rgb: 191.0/255.0,243.0/255.0,129.0/255.0
        Rectangle:
            pos: self.pos
            size: self.size    
    BoxLayout:
        size_hint_y: 0.7
        Image:
            source: "portadas/pie_balon.jpg"
    Button:
        background_color: 0, 1, .2, 5
        size_hint_y: 0.1
        text: "Acceder"
        on_release: root.createdb()
    Button:
        #BorderImage: 16,16,16,16
        background_normal: ""
        background_color: 1,0,0,0.85
        back_color: (1,1,1,1)
        size_hint_y: 0.1
        text: "Salir"
        on_release: root.fin()
    BoxLayout:
        size_hint_y: 0.1
<torneo>:
    orientation: "vertical"
    BoxLayout:
        #size_hint_y: 0.2
        orientation: "horizontal"
        Image:
            source: "imagenes/balon.png"
            size_hint_x: 0.3
        Image:
            source: "imagenes/cintillo.png"
            size_hint_: 0.7
    Button:
        background_color: 0, 1, .2, 5
        text: "Crear nuevo Torneo"
        on_release: root.crear_torneo()
    Button:
        background_normal: ''
        background_color: 1,0,0,0.85
        text: "Volver"
        on_release: root.goto_atras()
<equipos>:
    orientation: "vertical"
    nombre_equipo: ""
    data_id: ""
    id_equipo: ""
    BoxLayout:
        Button:
            size_hint_x: 0.5
            background_color: 0, 1, .2, 5
            text: root.nombre_equipo
            Image:
                source: "imagenes/e_car3.png"
                self_hint: 1, None
                height: self.parent.height
                y: self.parent.y
                x: self.parent.x -25
        BoxLayout:
            orientation: "vertical"
            size_hint_x:0.35
            Button:
                background_color: 0, 1, 0.8, 1
                text: "Ver jugadoras"
                on_press: root.goto_jugadora(root.data_id, root.id_equipo)
            Button:
                text: "Baja de equipo"    
<informacion>:
    data: " "
    data_id: " "
    data2: " "
    imagenes: " "
    canvas:
        Color:
            rgb: 191.0/255.0,243.0/255.0,129.0/255.0
        Rectangle:
            size: self.size
            pos: self.pos 
    BoxLayout:
        orientation: "vertical"
        size_hint_x:0.15
        Image:
            source: "imagenes/torneos/{}".format(root.imagenes)
    Button:
        background_color: 0.5, .5, .5, .5
        size_hint_x:0.7
        size_font: self.width*0.4
        text: root.data
        on_press: root.inform(root.data_id, root.data2)
    BoxLayout:
        orientation: "vertical"
        size_hint_x:0.15
        Button:
            #background_normal: ''
            background_color: 0, 0, 1, 0.5
            text: "+INFO"
            #size_hint_x: 0.1
            pos: self.pos
            on_release: root.verdetalles(root.data_id)
        Button:
            #background_normal: ''
            background_color: 0, 0, 1, 0.5
            text: "Editar"
            #size_hint_x: 0.1
            pos: self.pos
            on_release: root.actualizar(root.data_id)
<infotorneo>:
    data_id: " "
    data2: " "
    #equipon:
    orientation: "vertical"
    canvas:
        Color:
            rgb: 191.0/255.0,243.0/255.0,129.0/255.0
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        size_hint_y: 0.2
        orientation: "horizontal"
        Image:
            source: "imagenes/balon.png"
            size_hint_x: 0.3
        Image:
            source: "imagenes/cintillo.png"
            size_hint_: 0.7 
    Label:
        text: "EQUIPOS INSCRIPTOS AL TORNEO {}".format(root.data_id)
        size_hint_y:0.08
    ScrollView:
        GridLayout:
            canvas.before:
                Color:
                    rgb: 0,0,0
            id: container1
            padding: 10,10,10,10
            spacing: 5
            size_hint_y: None 
            cols:1 
            row_default_height: root.height*0.08
            height: self.minimum_height
<pruebaloca>:
    data_id: " "
    data2: " "
    #equipon:
    orientation: "vertical"
    canvas:
        Color:
            rgb: 191.0/255.0,243.0/255.0,129.0/255.0
        Rectangle:
            pos: self.pos
            size: self.size
    Button:
        text: "prueba loca"+root.data2
<basededatoswid>:
    canvas:
        Color:
            rgb: 191.0/255.0,243.0/255.0,129.0/255.0
        Rectangle:
            pos: self.pos
            size: self.size
    ScrollView:
        size: self.size
        GridLayout:
